{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignore": ["build", "node_modules", "coverage"]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "all": true,
      "nursery": {
        "noNodejsModules": "off"
      },
      "style": {
        "useNamingConvention": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": { "noExplicitAny": "off" }
    }
  }
}
